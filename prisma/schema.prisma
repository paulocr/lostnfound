generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model items {
  id          Int       @id @default(autoincrement())
  description String
  location    String?
  tags        String
  found       DateTime  @db.Timestamp(6)
  created_at  DateTime? @default(now()) @db.Timestamptz(6)
  images      images[]
}

model images {
  id      Int    @id @default(autoincrement())
  url     String
  altText String
  // Define the relationship with the Item table
  item    items? @relation(fields: [itemsId], references: [id]) // Each Image belongs to one Item
  itemsId Int?
}
